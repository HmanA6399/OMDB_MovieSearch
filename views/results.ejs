<% include partials/header %>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-3">Results Page !</h1>
            <p class="lead">Here you can find the Titles of the results</p>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Index</th>
                <th>Film Title</th>
                <th>Year</th>
            </tr>
            </thead>
            <tbody>
                <% var i = 1; movies.forEach(movie => { %>
                    <tr>
                        <td><%= i %> </td>
                        <td><%= movie.Title %> </td>
                        <td><%= movie.Year %> </td>
                    </tr>
                <% i++;}); %>
            </tbody>
        </table>
        <a href="/">Search Again !</a>
<% include partials/footer %>